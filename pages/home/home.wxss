.swiper_post{
  width: 100%;
  height: 300rpx;

}
.swiper_post image{
  width: 100%;
  height: 300rpx;
  
}
.news{
  height: 40rpx;
  /* overflow: hidden; */
  position: relative;
  font-size: 30rpx;
  margin: 30rpx 20rpx;

}
.news image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin: 0 10rpx;
}
.news swiper{
  width: 80%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 140rpx;
}
.shops{
  width: 100%;
  height:130rpx; 
  text-align: center;
  margin-top: 30rpx;
}
.shops view{
  width: 25%;
  height:100%; 
  float: left;

}
.shops image{
  width: 60rpx;
  height: 60rpx;
  margin:0 auto;
  display: block;
}
.shopInfo{
  width: 100%;
  height: 1750rpx;
  background-color:lightcyan;
}
.shopInfo .shopInfo_item{
  width: 42%;
  float: left;
  margin: 30rpx;
  background-color: #fff;
  border-radius: 9rpx;
}
.shopInfo .shopInfo_item view{
  padding-left: 10rpx;
}
.shopInfo .shopInfo_item view:nth-child(2){
  font-size: 30rpx;
}
.shopInfo .shopInfo_item view:nth-child(3){
  font-size: 25rpx;
  color: #999;
  margin: 25rpx 0;
}
.shopInfo .shopInfo_item .add{
  width:40rpx;
  height:40rpx;
  float:right;
  padding-right:10rpx;
}
.shopInfo .shopInfo_item .price{
  padding-right: 20rpx;
  text-decoration:line-through;

}
.shopInfo .shopInfo_item view:nth-child(4){
  font-size: 28rpx;
}

.shopInfo .shopInfo_item .shopInfo_img{
  width: 100%;
  height: 350rpx;
  border-radius: 9rpx;
}