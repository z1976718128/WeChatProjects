/* pages/shops/shops.wxss */
page{
  background: #eee;
}
.swiper_post{
  width: 100%;
  height: 500rpx;
}
.swiper_post image{
  width: 100%;
  height: 500rpx;
  
}
.frist,.two,.sex,.shops,.foots,.shopCart{
  background: #fff;
}
.youh{
    display: flex;
    border-bottom: 1px solid #eee;
}
.ico{
  display: inline-block;
  width:50rpx ;
  height:50rpx;
}
.hd{
  width: 100%;
  height:160rpx;
  position: relative;

}
.hd .fris{
  position: absolute;
  top: 50rpx;
  padding-left:20rpx;
}
.hd view:nth-child(2){
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-content: stretch; 
    align-items: center;
    text-align: left;
    padding-top: 20rpx;
}
.txs{
  width: 60%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: left;
}
.hd view:nth-child(3){
  position: absolute;
  right: 0;
  top: 50%;

}
.hides{
  padding-left: 60rpx;
}
.colors{
  border: 1px solid red;
  color: red;
}
.sex{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 50rpx;
  padding-left: 20rpx;
  position: relative;
}
.sex image{
  vertical-align: middle;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translate(-50%,-50%)
}
.shops{
  width: 100%;
  height: 150rpx;
  margin-top: 50rpx;
  overflow: hidden;
  position: relative;
  font-size: 30rpx;
}
.shops image{
  width: 150rpx;
  height: 150rpx;
  display: inline-block;
}
.shops .shoptext{
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding-left: 50%
}
.foots{
  width: 100%;
  margin-top: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.shopCart image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  text-align: center;
  padding-left: 25rpx;
}
.shopCart{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  z-index: 99;

}
.shopCart .item{
  width: 80%;
}
.shopCart .item view{
  float: left;
  width: 15%;
  margin: 0 15rpx;
  text-align: center;
}
.cart{
   width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  color: #fff;
  background-color: orange;
  text-align: center;
}
.mai{
  width: 22%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  float: right;
  color: #fff;
  background-color: red;
}
.bounced{
  width: 100%;
  height: 600rpx;
  position: fixed;
  bottom: 0;
  z-index: 999; 
  background: #fff;
}
.bounced .titles{
  height: 170rpx;
  border-bottom: 1px solid #eee;
  margin: 0 10rpx;
  position: relative;
  
}
.bounced .sjop{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  position: absolute;
  top: -36rpx;
}
.bounced .sc{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 40rpx;
  right: 0;
}
.bounced .bounced_text{
 position: absolute;
 top: 40rpx;
 left: 250rpx;
 color: red;
 

}
.shadow{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0, 0.4);
  position: absolute;
  top: 0;

}
.nums{
  display: flex;
  position: relative;
  margin-top: 20rpx;
}
.nums .numtext{
  padding-left: 10rpx;
}
.click{
  display: flex;
 position: absolute;
 right: 20rpx;
}
.click button{
  height: 50rpx;
  line-height:50rpx; 

}
.determine{
  width: 100%;
  height: 100rpx;
  background: red;
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.cont{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  border: 1rpx solid #eee;
  text-align: center;
  border-radius:5rpx; 
}